{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<div class="card">
    <div class="card-body">
        <form action="/admin/postagens/new" method="POST">
            <fieldset>
                <legend>Nova Postagem</legend>
                <p>
                    <label for="nome">Título</label>
                    <input type="text" id="nome" name="titulo" placeholder="Nome da postagem" class="form-control">
                </p>
                <p>
                    <label for="slug">Slug</label>
                    <input type="text" id="slug" name="slug" placeholder="Slug da postagem" class="form-control">
                </p>
                <p>
                    <label for="descricao">Descrição</label>
                    <input type="text" name="descricao" placeholder="Descrição da postagem" class="form-control">
                </p>
                <p>
                    <label for="conteudo">Conteúdo</label>
                    <textarea name="conteudo" class="form-control" placeholder="Insira aqui o conteudo da postagem" cols="30" rows="10"></textarea>
                </p>
                <p>
                    <label for="categoria">Categoria</label>
                    <select name="categoria" class="custom-select">
                        {{#each categorias}}
                        <option value="{{_id}}">{{nome}}</option>
                        {{else}}
                        <option value="0">Nenhuma categoria cadastrada</option>
                        {{/each}}
                    </select>
                </p>
                <br>
                <button type="submit" class="btn btn-success">Criar postagem</button>
            </fieldset>
        </form>
    </div>
</div>