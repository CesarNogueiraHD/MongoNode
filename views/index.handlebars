<div class="jumbotron">
    <h1 class="display-4">Bem vindo ao Blog do Node</h1>
    <p class="lead">Aqui é um blog utilizando o NodeJS, o Handlebars e o Bootstrap.</p>
    <p class="lead">
        <a href="" class="btn btn-primary btn-lg">Crie uma conta</a>
    </p>
</div>

<hr>

<h2>Postagens recentes</h2>

{{#each postagens}}
<div class="card mt-4">
    <div class="card-body">
        <h3>{{titulo}}</h3>
        <p>{{descricao}}</p>
        <a href="/postagem/{{slug}}"><button class="btn btn-success">Leia mais</button></a>
        <hr>
        <small>Categoria: {{categoria.nome}}</small><br>
        <small>Data de publicação: {{data}}</small>
    </div>
</div>
{{else}}
    <h5>Nenhuma Postagem</h5>
{{/each}}